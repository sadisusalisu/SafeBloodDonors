<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/whitec"

    tools:context="ng.org.ddhub.kanoblooddonation.Registration">



        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@mipmap/ic_launcher_round" />



    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_person_outline_black_24dp"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"


        android:hint=" Full Name"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etUserPhone"
        android:inputType="phone"

        android:drawableStart="@drawable/ic_phone_24dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_phone_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"


        android:hint="Phone number"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etUserEmail"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="8dp"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_mail_24dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_mail_24dp"
        android:hint="Email Address"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etUserPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:inputType="numberPassword"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/ic_lock_24dp"
        android:drawableStart="@drawable/ic_lock_24dp"
        android:drawablePadding="5dp"
        android:hint="Password"/>

    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <EditText
        android:id="@+id/etUserBG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_group_black_24dp"
        android:drawableLeft="@drawable/ic_group_black_24dp"
        android:hint="Blood Group"/>

    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <EditText

        android:id="@+id/etUserAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:hint="   Your Age"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <EditText
        android:id="@+id/etUserState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="   State of Resident"
       />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnReg"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Register me"
        android:background="@drawable/oval"
        android:layout_gravity="center"
        android:layout_margin="3dp"/>

    <TextView
        android:id="@+id/tvUserLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Already registered? Login"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:textColor="@color/Red"/>


</LinearLayout>
